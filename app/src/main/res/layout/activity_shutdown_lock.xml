<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_holographic_gradient">

    <!-- Glass Panel Background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="32dp"
        android:background="@drawable/bg_glass_panel"
        android:orientation="vertical"
        android:padding="24dp"
        android:elevation="10dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_lock"
            app:tint="@color/primary"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SHUTDOWN LOCKED"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Enter PIN to power off device"
            android:textColor="@color/text_secondary_dark"
            android:textSize="14sp"
            android:textAlignment="center" />

        <!-- PIN Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="PIN"
            app:boxBackgroundColor="#1AFFFFFF"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:textColor="@color/text_primary_dark"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Unlock Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUnlock"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:text="UNLOCK &amp; POWER OFF"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:backgroundTint="@color/primary" />

        <!-- Cancel/Emergency -->
        <TextView
            android:id="@+id/btnEmergency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:text="EMERGENCY CALL"
            android:textColor="@color/status_inactive"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

</FrameLayout>
