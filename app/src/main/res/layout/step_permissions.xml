<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setup_permissions_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="@string/setup_permissions_description"
            android:textSize="14sp"
            android:textColor="@color/text_secondary_light" />

        <!-- SMS Permission -->
        <LinearLayout
            android:id="@+id/rowSms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_sms"
                app:tint="@color/primary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/permission_sms"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/permission_sms_desc"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary_light" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imgSmsStatus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="@color/text_secondary_light" />

        </LinearLayout>

        <!-- Location Permission -->
        <LinearLayout
            android:id="@+id/rowLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_location"
                app:tint="@color/primary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/permission_location"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/permission_location_desc"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary_light" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imgLocationStatus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="@color/text_secondary_light" />

        </LinearLayout>

        <!-- Phone Permission -->
        <LinearLayout
            android:id="@+id/rowPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_call"
                app:tint="@color/primary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/permission_phone"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/permission_phone_desc"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary_light" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imgPhoneStatus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="@color/text_secondary_light" />

        </LinearLayout>

        <!-- Device Admin -->
        <LinearLayout
            android:id="@+id/rowDeviceAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_shield"
                app:tint="@color/primary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/permission_device_admin"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/permission_device_admin_desc"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary_light" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imgAdminStatus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="@color/text_secondary_light" />

        </LinearLayout>

        <!-- Accessibility -->
        <LinearLayout
            android:id="@+id/rowAccessibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lock"
                app:tint="@color/primary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/permission_accessibility"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/permission_accessibility_desc"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary_light" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imgAccessibilityStatus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="@color/text_secondary_light" />

        </LinearLayout>

        <!-- DND Access -->
        <LinearLayout
            android:id="@+id/rowDnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_siren"
                app:tint="@color/primary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/permission_dnd"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/permission_dnd_desc"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary_light" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imgDndStatus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="@color/text_secondary_light" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
