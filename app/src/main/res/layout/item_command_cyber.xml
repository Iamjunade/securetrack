<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_glass_panel_premium"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <!-- Icon Container with Glow -->
    <FrameLayout
        android:id="@+id/iconContainer"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_glass_panel_premium"
        android:backgroundTint="#1A00F0FF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_location"
            app:tint="@color/neon_cyan" />
    </FrameLayout>

    <!-- Command Code -->
    <TextView
        android:id="@+id/txtCommandCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="#LOCATE_&lt;PIN&gt;"
        android:textColor="@color/neon_cyan"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:letterSpacing="0.1"
        android:shadowColor="@color/neon_cyan_dim"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        app:layout_constraintStart_toEndOf="@id/iconContainer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgChevron" />

    <!-- Description -->
    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Triangulate device coordinates"
        android:textColor="@color/text_cyber_secondary"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/iconContainer"
        app:layout_constraintTop_toBottomOf="@id/txtCommandCode"
        app:layout_constraintEnd_toStartOf="@id/imgChevron" />

    <!-- Action Arrow -->
    <ImageView
        android:id="@+id/imgChevron"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_chevron_right"
        app:tint="@color/text_cyber_muted"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
