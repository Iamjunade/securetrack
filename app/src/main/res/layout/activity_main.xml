<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cyber_gradient">

    <!-- Scanline Overlay (CRT Effect) -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/view_scanline"
        android:alpha="0.2"
        android:scaleType="centerCrop" />

    <!-- Main Content Scroll -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="48dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SECURETRACK"
                        style="@style/Theme.SecureTrack.Text.Header" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SYSTEM STATUS // ONLINE"
                        style="@style/Theme.SecureTrack.Text.Data" />
                </LinearLayout>

                <!-- Notification Button (Frosted Glass) -->
                <FrameLayout
                    android:id="@+id/btnNotification"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_glass_panel_premium"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_notification"
                        app:tint="@color/text_cyber_primary" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="top|end"
                        android:background="@drawable/bg_fab_gradient" />
                </FrameLayout>
            </LinearLayout>

            <!-- Protection Status Card -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardStatus"
                style="@style/Theme.SecureTrack.GlassCard.Premium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Shield Animation -->
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieShield"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:lottie_fileName="shield_pulse.json"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toEndOf="@id/lottieShield"
                    app:layout_constraintEnd_toStartOf="@id/switchProtection"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:id="@+id/txtStatusTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PROTECTION ACTIVE"
                        android:textColor="@color/text_cyber_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="6dp">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:background="@color/matrix_green" />

                        <TextView
                            android:id="@+id/txtStatusDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="All systems nominal"
                            android:textColor="@color/text_cyber_secondary"
                            android:textSize="12sp"
                            android:fontFamily="monospace" />
                    </LinearLayout>
                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchProtection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:thumbTint="@color/neon_cyan"
                    app:trackTint="@color/glass_highlight_premium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Command Console Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:text="> COMMAND_CONSOLE"
                style="@style/Theme.SecureTrack.Text.Data" />

            <!-- Using include with new layout but SAME IDs -->
            <include layout="@layout/item_command_cyber" 
                     android:id="@+id/cmdLocate"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"/>

            <include layout="@layout/item_command_cyber" 
                     android:id="@+id/cmdSiren"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"/>

            <include layout="@layout/item_command_cyber" 
                     android:id="@+id/cmdLock"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"/>

            <include layout="@layout/item_command_cyber" 
                     android:id="@+id/cmdCallMe"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"/>

            <!-- Quick Update (Hidden/Dev) -->
            <LinearLayout
                android:id="@+id/btnQuickUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:padding="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHECK FOR UPDATES"
                    style="@style/Theme.SecureTrack.Text.Data"
                    android:textSize="10sp"
                    android:alpha="0.7"/>
            </LinearLayout>

             <!-- Logs Placeholder for Scroll -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="> RECENT_LOGS"
                style="@style/Theme.SecureTrack.Text.Data" />
                
            <include layout="@layout/item_log_card" 
                     android:layout_marginTop="12dp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Floating Navigation Pill -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomNavContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/navBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_floating_pill"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:elevation="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/navHome"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_dashboard"
                app:tint="@color/neon_cyan"
                android:padding="4dp"
                android:layout_marginEnd="24dp" />

            <ImageView
                android:id="@+id/navContacts"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_contacts"
                app:tint="@color/text_cyber_secondary"
                android:padding="4dp"
                android:layout_marginEnd="24dp" />

            <!-- Central Action/FAB Replacement -->
             <FrameLayout
                android:id="@+id/fabAdd"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_fab_gradient"
                android:backgroundTint="@color/electric_purple"
                android:elevation="10dp"
                android:layout_marginEnd="24dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_add"
                    app:tint="#FFFFFF" />
            </FrameLayout>

            <ImageView
                android:id="@+id/navLogs"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_history"
                app:tint="@color/text_cyber_secondary"
                android:padding="4dp"
                android:layout_marginEnd="24dp" />

            <ImageView
                android:id="@+id/navSettings"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_settings"
                app:tint="@color/text_cyber_secondary"
                android:padding="4dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
