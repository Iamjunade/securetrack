<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_shield"
            android:layout_marginBottom="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setup_welcome_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/setup_welcome_description"
            android:textSize="16sp"
            android:textColor="@color/text_secondary_light"
            android:textAlignment="center"
            android:lineSpacingMultiplier="1.3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Features:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/text_primary_light"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Remote GPS Tracking via SMS"
                android:textSize="14sp"
                android:textColor="@color/text_secondary_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Emergency Siren Alarm"
                android:textSize="14sp"
                android:textColor="@color/text_secondary_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• SIM Swap Detection"
                android:textSize="14sp"
                android:textColor="@color/text_secondary_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Anti-Uninstall Protection"
                android:textSize="14sp"
                android:textColor="@color/text_secondary_light" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
