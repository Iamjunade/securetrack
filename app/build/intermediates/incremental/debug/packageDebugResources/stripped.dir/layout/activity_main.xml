<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Holographic Background Gradient -->
    <View
        android:id="@+id/backgroundGradient"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_holographic_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Main Content Scroll -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="16dp">

            <!-- Header -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnNotification"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SECURETRACK"
                        android:textColor="@color/primary"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:letterSpacing="0.15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SYSTEM v4.2.0 // ONLINE"
                        android:textColor="@color/text_secondary_dark"
                        android:textSize="10sp"
                        android:letterSpacing="0.2" />

                </LinearLayout>

                <!-- Notification Button -->
                <FrameLayout
                    android:id="@+id/btnNotification"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_glass_panel"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_notification"
                        app:tint="#B0FFFFFF" />

                    <!-- Notification Badge -->
                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="top|end"
                        android:background="@drawable/bg_fab_gradient" />

                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Protection Status Card -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_glass_panel"
                android:padding="20dp">

                <!-- Shield Animation (Lottie) -->
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieShield"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:lottie_fileName="shield_pulse.json"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toEndOf="@id/iconContainer"
                    app:layout_constraintEnd_toStartOf="@id/switchProtection"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:id="@+id/txtStatusTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Protection Active"
                        android:textColor="@color/text_primary_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:background="@drawable/bg_fab_gradient" />

                        <TextView
                            android:id="@+id/txtStatusDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="All permissions granted"
                            android:textColor="@color/text_secondary_dark"
                            android:textSize="13sp" />

                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchProtection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:thumbTint="@color/primary"
                    app:trackTint="@color/secondary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Command Console Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="COMMAND CONSOLE"
                    android:textColor="@color/text_secondary_dark"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SMS-PROTO"
                    android:textColor="@color/text_muted"
                    android:textSize="10sp"
                    android:fontFamily="monospace"
                    android:background="@drawable/bg_glass_panel"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp" />

            </LinearLayout>

            <!-- UPDATE CHECK (Temporary for visibility) -->
            <LinearLayout
                android:id="@+id/btnQuickUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_glass_panel"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_upload"
                    app:tint="@color/primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="CHECK FOR UPDATES"
                    android:textColor="@color/primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

            </LinearLayout>

            <!-- Commands Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_glass_panel"
                android:orientation="vertical"
                android:clipChildren="false">

                <!-- LOCATE Command -->
                <include layout="@layout/item_command_holo" 
                    android:id="@+id/cmdLocate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#0DFFFFFF" />

                <!-- SIREN Command -->
                 <include layout="@layout/item_command_holo" 
                    android:id="@+id/cmdSiren"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#0DFFFFFF" />

                <!-- LOCK Command -->
                 <include layout="@layout/item_command_holo" 
                    android:id="@+id/cmdLock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#0DFFFFFF" />

                <!-- CALLME Command -->
                 <include layout="@layout/item_command_holo" 
                    android:id="@+id/cmdCallMe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <!-- Recent Log Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="12dp"
                android:text="RECENT LOG"
                android:textColor="@color/text_secondary_dark"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.15" />

            <!-- Recent Log Cards -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:clipToPadding="false">

                <LinearLayout
                    android:id="@+id/logCardsContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingEnd="8dp">

                    <!-- Log Card 1 -->
                    <include layout="@layout/item_log_card" />
                    
                    <!-- Log Card 2 -->
                    <include layout="@layout/item_log_card" />

                </LinearLayout>

            </HorizontalScrollView>

            <!-- Branding Footer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:alpha="0.7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MADE BY"
                    android:textColor="@color/text_secondary_dark"
                    android:textSize="8sp"
                    android:letterSpacing="0.3"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="META MINDS"
                    android:textColor="@color/primary"
                    android:textSize="12sp"
                    android:letterSpacing="0.2"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"
                    android:shadowColor="#8000E5FF"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="8" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Bottom Navigation -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomNavContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/navBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bottom_nav"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp"
            android:elevation="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Home -->
            <LinearLayout
                android:id="@+id/navHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_dashboard"
                    app:tint="@color/primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Home"
                    android:textColor="@color/text_primary_dark"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Contacts -->
            <LinearLayout
                android:id="@+id/navContacts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_contacts"
                    app:tint="#99FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Contacts"
                    android:textColor="@color/text_secondary_dark"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Spacer for Center FAB -->
            <View
                android:layout_width="56dp"
                android:layout_height="1dp" />

            <!-- Logs -->
            <LinearLayout
                android:id="@+id/navLogs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_history"
                    app:tint="#99FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Logs"
                    android:textColor="@color/text_secondary_dark"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Settings -->
            <LinearLayout
                android:id="@+id/navSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_settings"
                    app:tint="#99FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Settings"
                    android:textColor="@color/text_secondary_dark"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Center FAB (Anchored to Nav Background Top) -->
        <FrameLayout
            android:id="@+id/fabAdd"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_fab_gradient"
            android:elevation="20dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/navBackground"
            app:layout_constraintTop_toTopOf="@id/navBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_add"
                app:tint="@android:color/white" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
